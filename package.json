{
  "name": "reactive-react",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "change-emitter": "^0.1.6",
    "d3": "^5.5.0",
    "virtual-dom": "^2.1.1",
    "zen-observable": "^0.8.9"
  },
  "main": "dist/reactive-react.umd.js",
  "module": "dist/reactive-react.es.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.3.3",
    "babel-register": "^6.24.1",
    "browser-env": "^2.0.29",
    "npm-run-all": "^4.0.2",
    "parcel-bundler": "^1.9.7",
    "rollup": "^0.41.6"
  },
  "scripts": {
    "start": "parcel index.html --no-hmr",
    "start:time": "parcel demos/time-slicing/index.html",
    "build:module": "rollup src/reactive-react.js -f es -n reactive-react -o dist/reactive-react.es.js",
    "build:main": "rollup src/reactive-react.js -f umd -n reactive-react -o dist/reactive-react.umd.js",
    "build": "run-p build:module build:main",
    "prepublishOnly": "npm run build"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties",
      [
        "transform-react-jsx",
        {}
      ]
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
